<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="MainMenuGrid" TargetType="Grid">
        <Style.Resources>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="5"/>
            </Style>
        </Style.Resources>
    </Style>

	<FontFamily x:Key="MyFlavourSans">Comic Sans MS</FontFamily>

	<Style x:Key="SansWindow" TargetType="Window">
		<Setter Property="FontFamily" Value="{DynamicResource MyFlavourSans}"/>
		<Setter Property="FontWeight" Value="Bold"/>
	</Style>

</ResourceDictionary>
<Window x:Class="Impalers.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Impalers"
        mc:Ignorable="d"
        Title="Impalers" 
        Icon="Resources\icon.png"
        Style="{StaticResource VS2012WindowStyle}"
        Height="400" Width="800"
        MinHeight="400" MinWidth="800"
        Closed="WindowClosed"
        SizeChanged="Window_SizeChanged"
        Loaded="Window_Loaded"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="253*"/>
            <RowDefinition Height="41*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="89*"/>
            <ColumnDefinition Width="620*"/>
            <ColumnDefinition Width="75*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="Resources\mangal.png"/>
        </Grid.Background>

        <TextBlock Grid.Row="0" Grid.Column="0" x:Name="ScorePlayer"/>
        <TextBlock Grid.Row="0" Grid.Column="2" x:Name="ScoreEnemy" />

        <Grid Grid.Row="1" Grid.Column="1" ShowGridLines="True" x:Name="MeatGrid">

        </Grid>

    </Grid>
</Window>
